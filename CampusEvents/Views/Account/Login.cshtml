@model CampusEvents.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<!-- Hero Section -->
<section class="py-5 bg-gradient-to-br from-primary to-info text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4">
                    <i class="bi bi-person-circle text-white fs-1"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3">Welcome Back</h1>
                <p class="lead mb-0">Sign in to your account and continue discovering amazing campus events</p>
            </div>
        </div>
    </div>
</section>

<!-- Login Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card card-glass border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-box-arrow-in-right text-primary fs-4"></i>
                            </div>
                            <h2 class="h4 fw-semibold mb-2">Sign In to Your Account</h2>
                            <p class="text-muted">Enter your credentials to access your dashboard</p>
                        </div>

                        <form method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            
                            <!-- Email Field -->
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-end-0">
                                        <i class="bi bi-envelope text-muted"></i>
                                    </span>
                                    <input asp-for="Email" class="form-control border-start-0 bg-transparent" 
                                           placeholder="Enter your email address" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-end-0">
                                        <i class="bi bi-lock text-muted"></i>
                                    </span>
                                    <input asp-for="Password" class="form-control border-start-0 bg-transparent" 
                                           placeholder="Enter your password" required />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Remember Me -->
                            <div class="mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label fw-medium">
                                        Keep me signed in
                                    </label>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg py-3">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="text-center mb-4">
                            <div class="d-flex align-items-center">
                                <hr class="flex-grow-1">
                                <span class="px-3 text-muted small">OR</span>
                                <hr class="flex-grow-1">
                            </div>
                        </div>

                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="text-muted mb-0">Don't have an account yet?</p>
                            <a href="/Account/Register" class="btn btn-outline-primary mt-2">
                                <i class="bi bi-person-plus me-2"></i>Create New Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                    <i class="bi bi-calendar-event text-primary fs-4"></i>
                </div>
                <h5 class="fw-semibold mb-2">Discover Events</h5>
                <p class="text-muted small">Find and attend amazing campus events</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="w-12 h-12 bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                    <i class="bi bi-ticket-perforated text-success fs-4"></i>
                </div>
                <h5 class="fw-semibold mb-2">Get Tickets</h5>
                <p class="text-muted small">Claim free tickets with QR codes</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="w-12 h-12 bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                    <i class="bi bi-people text-info fs-4"></i>
                </div>
                <h5 class="fw-semibold mb-2">Join Community</h5>
                <p class="text-muted small">Connect with fellow students</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add form validation styling
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
        // Add loading state to submit button
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Signing In...';
            submitBtn.disabled = true;
        });
    </script>
}