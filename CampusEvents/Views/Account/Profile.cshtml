@model CampusEvents.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<!-- Profile Page -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- User Profile Card -->
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="https://api.dicebear.com/7.x/initials/svg?seed=@Model.User.FullName" alt="Avatar" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        <h3 class="mb-1">@Model.User.FullName</h3>
                        <p class="text-muted mb-3">@Model.User.Email</p>

                        <div class="row g-3 mb-4">
                            <div class="col-4">
                                <div class="text-center">
                                    <div class="h5 mb-1">@Model.TotalTickets</div>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center">
                                    <div class="h5 mb-1">@Model.UpcomingTickets</div>
                                    <small class="text-muted">Upcoming</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center">
                                    <div class="h5 mb-1">@Model.PastTickets</div>
                                    <small class="text-muted">Past</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="bi bi-person-badge text-primary me-2"></i>
                                <span class="fw-semibold">@Model.User.Role.ToString()</span>
                            </div>
                            
                            @if (Model.User.LastLoginAt != DateTime.MinValue)
                            {
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-clock text-muted me-2"></i>
                                    <small class="text-muted">Last login: @Model.User.LastLoginAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            }
                        </div>
                        
                        <div class="d-grid">
                            <a href="/Account/Logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Tabs -->
                <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab" aria-controls="upcoming" aria-selected="true">
                            <i class="bi bi-calendar-check me-2"></i>Upcoming Events
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab" aria-controls="past" aria-selected="false">
                            <i class="bi bi-calendar-x me-2"></i>Past Events
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="calendar-tab" data-bs-toggle="tab" data-bs-target="#calendar" type="button" role="tab" aria-controls="calendar" aria-selected="false">
                            <i class="bi bi-calendar3 me-2"></i>Calendar
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="profileTabsContent">
                    <!-- Upcoming Events Tab -->
                    <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
                        <h4 class="mb-3">Your Upcoming Events</h4>
                        @if (Model.UpcomingEvents != null && Model.UpcomingEvents.Any())
                        {
                            <div class="row g-3">
                                @foreach (var eventItem in Model.UpcomingEvents)
                                {
                                    <div class="col-md-6">
                                        <div class="card hover-scale-105">
                                            <div class="card-body">
                                                <h5 class="card-title">@eventItem.Title</h5>
                                                <p class="card-text text-muted">@eventItem.Date.ToString("MMM dd, yyyy") at @eventItem.Time.ToString(@"hh\:mm tt")</p>
                                                <p class="card-text text-muted">
                                                    <i class="bi bi-geo-alt me-1"></i>@eventItem.Location
                                                </p>
                                                <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-check display-1 text-muted"></i>
                                <h3 class="mt-3">No Upcoming Events</h3>
                                <p class="text-muted">You haven't claimed tickets for any upcoming events yet.</p>
                                <a href="/Events" class="btn btn-primary">Browse Events</a>
                            </div>
                        }
                    </div>

                    <!-- Past Events Tab -->
                    <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
                        <h4 class="mb-3">Your Past Events</h4>
                        @if (Model.PastEvents != null && Model.PastEvents.Any())
                        {
                            <div class="row g-3">
                                @foreach (var eventItem in Model.PastEvents)
                                {
                                    <div class="col-md-6">
                                        <div class="card hover-scale-105">
                                            <div class="card-body">
                                                <h5 class="card-title">@eventItem.Title</h5>
                                                <p class="card-text text-muted">@eventItem.Date.ToString("MMM dd, yyyy") at @eventItem.Time.ToString(@"hh\:mm tt")</p>
                                                <p class="card-text text-muted">
                                                    <i class="bi bi-geo-alt me-1"></i>@eventItem.Location
                                                </p>
                                                <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-calendar-x display-1 text-muted"></i>
                                <h3 class="mt-3">No Past Events</h3>
                                <p class="text-muted">You haven't attended any past events yet.</p>
                                <a href="/Events" class="btn btn-primary">Browse Events</a>
                            </div>
                        }
                    </div>

                    <!-- Calendar Tab -->
                    <div class="tab-pane fade" id="calendar" role="tabpanel" aria-labelledby="calendar-tab">
                        <h4 class="mb-3">Your Personal Calendar</h4>
                        <div class="text-center py-5">
                            <i class="bi bi-calendar3 display-1 text-muted"></i>
                            <h3 class="mt-3">Calendar Feature Coming Soon!</h3>
                            <p class="text-muted">We're working on integrating a personal calendar to help you manage your events.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>