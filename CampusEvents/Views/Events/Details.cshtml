@model CampusEvents.Models.Event
@{
    ViewData["Title"] = Model.Title;
}

<!-- Hero Section with Event Image -->
<section class="position-relative" style="min-height: 60vh;">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="position-absolute inset-0">
            <img src="@Model.ImageUrl" class="w-100 h-100" alt="@Model.Title" style="object-fit: cover;">
            <div class="position-absolute inset-0 bg-gradient-to-t from-black bg-opacity-70"></div>
        </div>
    }
    else
    {
        <div class="position-absolute inset-0 bg-gradient-to-br from-primary to-info"></div>
    }
    
    <!-- Hero Content -->
    <div class="position-relative" style="z-index: 10;">
        <div class="container py-5">
            <div class="row align-items-end" style="min-height: 50vh;">
                <div class="col-lg-8">
                    <div class="text-white">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <span class="badge bg-primary bg-opacity-90 fs-6">@Model.Category</span>
                            @if (Model.IsFull)
                            {
                                <span class="badge bg-danger bg-opacity-90 fs-6">
                                    <i class="bi bi-x-circle me-1"></i>Event Full
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success bg-opacity-90 fs-6">
                                    <i class="bi bi-check-circle me-1"></i>@Model.AvailableTickets Tickets Available
                                </span>
                            }
                        </div>
                        <h1 class="display-3 fw-bold mb-3">@Model.Title</h1>
                        <p class="lead mb-4">@Model.Description</p>
                        <div class="d-flex flex-wrap gap-4">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-calendar-event fs-5"></i>
                                <span>@Model.Date.ToString("dddd, MMMM dd, yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-clock fs-5"></i>
                                <span>@Model.Time.ToString(@"hh\:mm tt")</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-geo-alt fs-5"></i>
                                <span>@Model.Location</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Event Details -->
            <div class="col-lg-8">
                <div class="card card-glass border-0 shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="h3 fw-semibold mb-4">Event Information</h2>
                        
                        <!-- Event Details Grid -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-3 bg-primary bg-opacity-5 rounded-3">
                                    <div class="w-10 h-10 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold text-primary">Date</div>
                                        <div class="text-muted">@Model.Date.ToString("dddd, MMMM dd, yyyy")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-3 bg-info bg-opacity-5 rounded-3">
                                    <div class="w-10 h-10 bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-clock text-info"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold text-info">Time</div>
                                        <div class="text-muted">@Model.Time.ToString(@"hh\:mm tt")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-3 bg-success bg-opacity-5 rounded-3">
                                    <div class="w-10 h-10 bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-geo-alt text-success"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold text-success">Location</div>
                                        <div class="text-muted">@Model.Location</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-3 bg-warning bg-opacity-5 rounded-3">
                                    <div class="w-10 h-10 bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-building text-warning"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold text-warning">Organization</div>
                                        <div class="text-muted">@Model.Organization</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Description -->
                        <div class="mb-4">
                            <h3 class="h5 fw-semibold mb-3">About This Event</h3>
                            <div class="bg-light bg-opacity-50 p-4 rounded-3">
                                <p class="mb-0 lead">@Model.Description</p>
                            </div>
                        </div>
                        
                        <!-- Organizer Info -->
                        @if (Model.Organizer != null)
                        {
                            <div class="card card-glass border-0">
                                <div class="card-body">
                                    <h3 class="h5 fw-semibold mb-3">Event Organizer</h3>
                                    <div class="d-flex align-items-center">
                                        <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="bi bi-person text-primary fs-5"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@Model.Organizer.FullName</div>
                                            <div class="text-muted small">Event Organizer</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Ticket Sidebar -->
            <div class="col-lg-4">
                <div class="card card-glass border-0 shadow-lg sticky-top" style="top: 2rem;">
                    <div class="card-body p-4">
                        <h3 class="h5 fw-semibold mb-4">Get Your Ticket</h3>
                        
                        <!-- Capacity Progress -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Event Capacity</span>
                                <span class="text-muted">@Model.TicketsIssued / @Model.Capacity</span>
                            </div>
                            <div class="progress mb-2" style="height: 10px;">
                                @{
                                    var attendanceRate = Model.Capacity > 0 ? (double)Model.TicketsIssued / Model.Capacity * 100 : 0;
                                    var progressClass = attendanceRate >= 90 ? "bg-danger" : attendanceRate >= 70 ? "bg-warning" : "bg-success";
                                }
                                <div class="progress-bar @progressClass" role="progressbar" 
                                     style="width: @(attendanceRate)%" 
                                     aria-valuenow="@attendanceRate" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100"></div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">@attendanceRate.ToString("F1")% filled</small>
                                <small class="text-muted">@Model.AvailableTickets available</small>
                            </div>
                        </div>
                        
                        <!-- Ticket Status -->
                        <div class="mb-4">
                            @if (Model.IsFull)
                            {
                                <div class="alert alert-danger border-0">
                                    <i class="bi bi-x-circle me-2"></i>
                                    <strong>Event Full</strong><br>
                                    <small>Sorry, this event has reached maximum capacity.</small>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success border-0">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>Tickets Available</strong><br>
                                    <small>@Model.AvailableTickets tickets remaining</small>
                                </div>
                            }
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-grid gap-3">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @if (Model.IsFull)
                                {
                                    <button class="btn btn-secondary btn-lg" disabled>
                                        <i class="bi bi-x-circle me-2"></i>Event Full
                                    </button>
                                }
                                else
                                {
                                    <form method="post" action="/Events/ClaimTicket/@Model.Id">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-ticket-perforated me-2"></i>Claim Free Ticket
                                        </button>
                                    </form>
                                }
                            }
                            else
                            {
                                <a href="/Account/Login" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person me-2"></i>Sign In to Get Ticket
                                </a>
                            }
                            
                            <a href="/Events" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Events
                            </a>
                            
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="bi bi-house me-2"></i>Back to Home
                            </a>
                        </div>
                        
                        <!-- Event Stats -->
                        <hr class="my-4">
                        <div class="row g-3 text-center">
                            <div class="col-6">
                                <div class="fw-bold text-primary fs-4">@Model.Capacity</div>
                                <div class="text-muted small">Total Capacity</div>
                            </div>
                            <div class="col-6">
                                <div class="fw-bold text-success fs-4">@Model.TicketsIssued</div>
                                <div class="text-muted small">Tickets Issued</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
            </div>
            <div class="toast-body">
                @TempData["Success"]
            </div>
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong class="me-auto">Error</strong>
            </div>
            <div class="toast-body">
                @TempData["Error"]
            </div>
        </div>
    </div>
}