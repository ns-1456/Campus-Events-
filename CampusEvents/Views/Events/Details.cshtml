@model CampusEvents.Models.Event
@{
    ViewData["Title"] = Model.Title;
}

<!-- Breadcrumb Navigation -->
<section class="py-3 bg-secondary">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/Events">Events</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Event Details -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Event Information (Left Column) -->
            <div class="col-lg-8">
                <!-- Event Image -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-4">
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
                    </div>
                }
                
                <!-- Event Title and Category -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <h1 class="mb-0">@Model.Title</h1>
                    <span class="badge bg-primary fs-6">@Model.Category</span>
                </div>
                
                <!-- Event Description -->
                <div class="mb-4">
                    <p class="lead">@Model.Description</p>
                </div>
                
                <!-- Event Details Grid -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-event text-primary me-3 fs-4"></i>
                                    <div>
                                        <h6 class="mb-1">Date</h6>
                                        <p class="mb-0">@Model.Date.ToString("dddd, MMMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-clock text-primary me-3 fs-4"></i>
                                    <div>
                                        <h6 class="mb-1">Time</h6>
                                        <p class="mb-0">@Model.Time.ToString(@"hh\:mm tt")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-geo-alt text-primary me-3 fs-4"></i>
                                    <div>
                                        <h6 class="mb-1">Location</h6>
                                        <p class="mb-0">@Model.Location</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-building text-primary me-3 fs-4"></i>
                                    <div>
                                        <h6 class="mb-1">Organization</h6>
                                        <p class="mb-0">@Model.Organization</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Ticket Information (Right Column) -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 2rem;">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Get Your Ticket</h4>
                        
                        <!-- Capacity Progress -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Capacity</span>
                                <span class="text-muted">@Model.TicketsIssued / @Model.Capacity</span>
                            </div>
                            <div class="progress mb-2">
                                <div class="progress-bar @(Model.IsFull ? "bg-danger" : "bg-success")" 
                                     role="progressbar" 
                                     style="width: @(Model.AttendanceRate)%" 
                                     aria-valuenow="@Model.AttendanceRate" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted">@Model.AttendanceRate.ToString("F1")% filled</small>
                        </div>
                        
                        <!-- Available Tickets -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">Available</span>
                                <span class="badge @(Model.AvailableTickets > 0 ? "bg-success" : "bg-danger")">
                                    @Model.AvailableTickets tickets
                                </span>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="d-grid gap-3">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @if (Model.IsFull)
                                {
                                    <button class="btn btn-secondary btn-lg" disabled>
                                        <i class="bi bi-x-circle me-2"></i>Event Full
                                    </button>
                                }
                                else
                                {
                                    <form method="post" action="/Events/ClaimTicket/@Model.Id">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-ticket-perforated me-2"></i>Claim Ticket
                                        </button>
                                    </form>
                                }
                            }
                            else
                            {
                                <a href="/Account/Login" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person me-2"></i>Sign In to Get Ticket
                                </a>
                            }
                            
                            <a href="/Events" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Events
                            </a>
                        </div>
                        
                        <!-- Event Organizer -->
                        @if (Model.Organizer != null)
                        {
                            <hr class="my-4">
                            <div class="text-center">
                                <small class="text-muted">Organized by</small>
                                <div class="fw-semibold">@Model.Organizer.FullName</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-dark text-white">
                @TempData["Success"]
            </div>
        </div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-dark text-white">
                @TempData["Error"]
            </div>
        </div>
    </div>
}
}