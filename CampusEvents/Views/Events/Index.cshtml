@model IEnumerable<CampusEvents.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<!-- Page Header -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-3">Campus Events</h1>
                <p class="text-muted">Discover amazing events happening on campus</p>
            </div>
        </div>
    </div>
</section>

<!-- Filter Bar - Minimal Design -->
<section class="py-3 bg-secondary">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Search</label>
                        <input type="text" class="form-control" id="search" name="search" value="@ViewBag.SearchTerm" placeholder="Search events...">
                    </div>
                    <div class="col-md-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var category in (List<string>)ViewBag.Categories)
                                {
                                    <option value="@category" selected="@(ViewBag.SelectedCategory == category)">@category</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sortBy" class="form-label">Sort By</label>
                        <select class="form-select" id="sortBy" name="sortBy">
                            <option value="date" selected="@(ViewBag.SortBy == "date")">Date</option>
                            <option value="title" selected="@(ViewBag.SortBy == "title")">Title</option>
                            <option value="location" selected="@(ViewBag.SortBy == "location")">Location</option>
                            <option value="capacity" selected="@(ViewBag.SortBy == "capacity")">Capacity</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Events Grid -->
<section class="py-5">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var eventItem in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card hover-scale-105">
                            @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                            {
                                <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title">
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title">@eventItem.Title</h5>
                                    <span class="badge bg-primary">@eventItem.Category</span>
                                </div>
                                <p class="card-text">@eventItem.Description.Substring(0, Math.Min(120, eventItem.Description.Length))...</p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="bi bi-calendar me-1"></i>
                                        <small>@eventItem.Date.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="bi bi-geo-alt me-1"></i>
                                        <small>@eventItem.Location</small>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="bi bi-clock me-1"></i>
                                        <small>@eventItem.Time.ToString(@"hh\:mm")</small>
                                    </div>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="bi bi-people me-1"></i>
                                        <small>@eventItem.TicketsIssued / @eventItem.Capacity</small>
                                    </div>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm flex-grow-1">View Details</a>
                                    @if (eventItem.IsFull)
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Full</button>
                                    }
                                    else
                                    {
                                        <a href="/Events/Details/@eventItem.Id" class="btn btn-primary btn-sm">Get Ticket</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-event display-1 text-muted"></i>
                <h3 class="mt-3">No Events Found</h3>
                <p class="text-muted">Try adjusting your search criteria or check back later for new events.</p>
                <a href="/Events" class="btn btn-primary">View All Events</a>
            </div>
        }
    </div>
</section>