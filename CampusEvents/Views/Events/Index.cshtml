@model IEnumerable<CampusEvents.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<!-- Hero Section -->
<section class="py-5 bg-gradient-to-br from-primary to-info text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Discover Campus Events</h1>
                <p class="lead mb-4">Find amazing events happening on campus. From academic talks to social gatherings, there's something for everyone.</p>
                <div class="d-flex flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-calendar-check fs-4"></i>
                        <span>@Model?.Count() Events Available</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-people fs-4"></i>
                        <span>Join Thousands of Students</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto">
                    <i class="bi bi-calendar-event text-white fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Glassmorphism Filter Bar -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="card card-glass border-0 shadow-lg">
            <div class="card-body p-4">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label fw-semibold">
                            <i class="bi bi-search me-2"></i>Search Events
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0 bg-transparent" id="search" name="search" 
                                   value="@ViewBag.SearchTerm" placeholder="Search by title, description, or location...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="category" class="form-label fw-semibold">
                            <i class="bi bi-tags me-2"></i>Category
                        </label>
                        <select class="form-select bg-transparent" id="category" name="category">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var category in (List<string>)ViewBag.Categories)
                                {
                                    <option value="@category" selected="@(ViewBag.SelectedCategory == category)">@category</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sortBy" class="form-label fw-semibold">
                            <i class="bi bi-sort-down me-2"></i>Sort By
                        </label>
                        <select class="form-select bg-transparent" id="sortBy" name="sortBy">
                            <option value="date" selected="@(ViewBag.SortBy == "date")">Date (Earliest First)</option>
                            <option value="title" selected="@(ViewBag.SortBy == "title")">Title (A-Z)</option>
                            <option value="location" selected="@(ViewBag.SortBy == "location")">Location</option>
                            <option value="capacity" selected="@(ViewBag.SortBy == "capacity")">Capacity (High to Low)</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-funnel me-2"></i>Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Events Grid -->
<section class="py-5">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var eventItem in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card card-glass h-100 border-0 shadow-sm hover-scale-105 transition">
                            @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                            {
                                <div class="position-relative overflow-hidden" style="height: 200px;">
                                    <img src="@eventItem.ImageUrl" class="card-img-top w-100 h-100" alt="@eventItem.Title" style="object-fit: cover;">
                                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-to-t from-black bg-opacity-60"></div>
                                    <div class="position-absolute top-0 end-0 p-3">
                                        <span class="badge bg-primary bg-opacity-90">@eventItem.Category</span>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 p-3 text-white">
                                        <div class="fw-semibold">@eventItem.Title</div>
                                        <div class="small opacity-90">@eventItem.Date.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="position-relative bg-gradient-to-br from-primary to-info text-white" style="height: 200px;">
                                    <div class="position-absolute top-0 end-0 p-3">
                                        <span class="badge bg-white bg-opacity-20 text-white">@eventItem.Category</span>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 p-3">
                                        <div class="fw-semibold">@eventItem.Title</div>
                                        <div class="small opacity-90">@eventItem.Date.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                            }
                            
                            <div class="card-body d-flex flex-column">
                                <div class="mb-3">
                                    <h5 class="card-title mb-2">@eventItem.Title</h5>
                                    <p class="card-text text-muted flex-grow-1">@(eventItem.Description.Length > 120 ? eventItem.Description.Substring(0, 120) + "..." : eventItem.Description)</p>
                                </div>
                                
                                <div class="mt-auto">
                                    <!-- Event Details -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="d-flex align-items-center gap-2 text-muted">
                                            <i class="bi bi-geo-alt"></i>
                                            <small>@eventItem.Location</small>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 text-muted">
                                            <i class="bi bi-clock"></i>
                                            <small>@eventItem.Time.ToString(@"hh\:mm")</small>
                                        </div>
                                    </div>
                                    
                                    <!-- Capacity Bar -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-muted">Capacity</small>
                                            <small class="text-muted fw-semibold">@eventItem.TicketsIssued / @eventItem.Capacity</small>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            @{
                                                var attendanceRate = eventItem.Capacity > 0 ? (double)eventItem.TicketsIssued / eventItem.Capacity * 100 : 0;
                                                var progressClass = attendanceRate >= 90 ? "bg-danger" : attendanceRate >= 70 ? "bg-warning" : "bg-success";
                                            }
                                            <div class="progress-bar @progressClass" role="progressbar" 
                                                 style="width: @(attendanceRate)%" 
                                                 aria-valuenow="@attendanceRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    
                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-2">
                                        <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm flex-grow-1">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                        @if (eventItem.IsFull)
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled>
                                                <i class="bi bi-x-circle me-1"></i>Full
                                            </button>
                                        }
                                        else
                                        {
                                            <a href="/Events/Details/@eventItem.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-ticket-perforated me-1"></i>Get Ticket
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card card-glass border-0 text-center py-5">
                        <div class="card-body">
                            <div class="w-16 h-16 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4">
                                <i class="bi bi-calendar-event text-primary fs-1"></i>
                            </div>
                            <h3 class="fw-semibold mb-3">No Events Found</h3>
                            <p class="text-muted mb-4">We couldn't find any events matching your criteria. Try adjusting your search filters or check back later for new events.</p>
                            <div class="d-flex gap-3 justify-content-center">
                                <a href="/Events" class="btn btn-primary">
                                    <i class="bi bi-arrow-clockwise me-2"></i>View All Events
                                </a>
                                <a href="/" class="btn btn-outline-primary">
                                    <i class="bi bi-house me-2"></i>Back to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Quick Stats Section -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3 col-6 text-center">
                    <div class="card card-glass border-0 h-100">
                        <div class="card-body">
                            <div class="w-10 h-10 bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-calendar-event text-primary"></i>
                            </div>
                            <h4 class="fw-bold text-primary">@Model.Count()</h4>
                            <p class="text-muted mb-0">Total Events</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="card card-glass border-0 h-100">
                        <div class="card-body">
                            <div class="w-10 h-10 bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            <h4 class="fw-bold text-success">@Model.Count(e => !e.IsFull)</h4>
                            <p class="text-muted mb-0">Available Events</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="card card-glass border-0 h-100">
                        <div class="card-body">
                            <div class="w-10 h-10 bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-people text-info"></i>
                            </div>
                            <h4 class="fw-bold text-info">@Model.Sum(e => e.TicketsIssued)</h4>
                            <p class="text-muted mb-0">Tickets Issued</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 text-center">
                    <div class="card card-glass border-0 h-100">
                        <div class="card-body">
                            <div class="w-10 h-10 bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="bi bi-tags text-warning"></i>
                            </div>
                            <h4 class="fw-bold text-warning">@Model.Select(e => e.Category).Distinct().Count()</h4>
                            <p class="text-muted mb-0">Categories</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}