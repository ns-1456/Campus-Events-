@model IEnumerable<CampusEvents.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 fw-bold">Campus Events</h1>
            <p class="lead text-muted">Discover amazing events happening on campus</p>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" name="search" value="@ViewBag.SearchTerm" placeholder="Search events...">
                        </div>
                        <div class="col-md-3">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">All Categories</option>
                                @if (ViewBag.Categories != null)
                                {
                                    @foreach (var category in (List<string>)ViewBag.Categories)
                                    {
                                        <option value="@category" selected="@(ViewBag.SelectedCategory == category)">@category</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="sortBy" class="form-label">Sort By</label>
                            <select class="form-select" id="sortBy" name="sortBy">
                                <option value="date" selected="@(ViewBag.SortBy == "date")">Date</option>
                                <option value="title" selected="@(ViewBag.SortBy == "title")">Title</option>
                                <option value="location" selected="@(ViewBag.SortBy == "location")">Location</option>
                                <option value="capacity" selected="@(ViewBag.SortBy == "capacity")">Capacity</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Events Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var eventItem in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text text-muted flex-grow-1">@eventItem.Description.Substring(0, Math.Min(120, eventItem.Description.Length))...</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> @eventItem.Date.ToString("MMM dd, yyyy")
                                    </small>
                                    <span class="badge bg-primary">@eventItem.Category</span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt"></i> @eventItem.Location
                                    </small>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @eventItem.Time.ToString(@"hh\:mm")
                                    </small>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="flex-grow-1 me-3">
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: @(eventItem.AttendanceRate)%" 
                                                 aria-valuenow="@eventItem.AttendanceRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100"></div>
                                        </div>
                                        <small class="text-muted">@eventItem.TicketsIssued / @eventItem.Capacity tickets</small>
                                    </div>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm flex-grow-1">View Details</a>
                                    @if (eventItem.IsFull)
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>Full</button>
                                    }
                                    else
                                    {
                                        <a href="/Events/Details/@eventItem.Id" class="btn btn-primary btn-sm">Get Ticket</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="card border-0">
                    <div class="card-body">
                        <i class="bi bi-calendar-event display-1 text-muted"></i>
                        <h3 class="mt-3">No Events Found</h3>
                        <p class="text-muted">Try adjusting your search criteria or check back later for new events.</p>
                        <a href="/Events" class="btn btn-primary">View All Events</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
