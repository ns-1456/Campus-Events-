@{
    ViewData["Title"] = "Campus Events";
}

<!-- Hero Section with Video Background -->
<section class="hero-section position-relative min-vh-100 d-flex align-items-center">
    <div class="video-background position-absolute w-100 h-100">
        <video autoplay muted loop class="w-100 h-100" style="object-fit: cover;">
            <source src="~/videos/background-video.mp4" type="video/mp4">
        </video>
        <div class="video-overlay position-absolute w-100 h-100" style="background: rgba(0,0,0,0.4);"></div>
    </div>
    
    <div class="container position-relative z-3 text-center text-white">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">Campus Events & Ticketing</h1>
                <p class="lead mb-4">Discover, organize, and attend amazing campus events. Your gateway to university life.</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="/Events" class="btn btn-primary btn-lg px-4">Browse Events</a>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg px-4">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="text-primary fw-bold">@ViewBag.TotalEvents</h3>
                        <p class="text-muted mb-0">Total Events</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="text-success fw-bold">@ViewBag.UpcomingEvents</h3>
                        <p class="text-muted mb-0">Upcoming Events</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="text-info fw-bold">@ViewBag.TotalTickets</h3>
                        <p class="text-muted mb-0">Tickets Issued</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="text-warning fw-bold">@ViewBag.TotalUsers</h3>
                        <p class="text-muted mb-0">Active Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold">Featured Events</h2>
                <p class="lead text-muted">Discover the most popular upcoming events on campus</p>
            </div>
        </div>
        
        <div class="row">
            @if (ViewBag.FeaturedEvents != null)
            {
                @foreach (var eventItem in (List<Event>)ViewBag.FeaturedEvents)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                            {
                                <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;">
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@eventItem.Title</h5>
                                <p class="card-text text-muted flex-grow-1">@eventItem.Description.Substring(0, Math.Min(100, eventItem.Description.Length))...</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <small class="text-muted">@eventItem.Date.ToString("MMM dd, yyyy")</small>
                                        <span class="badge bg-primary">@eventItem.Category</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@eventItem.Location</small>
                                        <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No featured events available at the moment.</p>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <a href="/Events" class="btn btn-primary btn-lg">View All Events</a>
        </div>
    </div>
</section>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.video-background {
    z-index: 1;
}

.video-overlay {
    z-index: 2;
}

.position-relative.z-3 {
    z-index: 3;
}
</style>
