@{
    ViewData["Title"] = "Campus Events";
}

<!-- Full-Screen Hero Section -->
<section class="hero-section">
    <!-- Video Background -->
    <div class="video-background">
        <video autoplay muted loop playsinline class="w-100 h-100" style="object-fit: cover;">
            <source src="~/videos/background-video.mp4" type="video/mp4">
            <!-- Fallback for browsers that don't support video -->
            <div class="position-absolute inset-0 bg-gradient-to-br from-pink-200 via-purple-100 to-blue-200"></div>
        </video>
        
        <!-- Overlay gradients -->
        <div class="video-overlay"></div>
    </div>

    <!-- Decorative Blobs -->
    <div class="decorative-blob" style="width: 200px; height: 200px; top: 10%; left: 10%; animation-delay: 0s;"></div>
    <div class="decorative-blob" style="width: 150px; height: 150px; top: 60%; right: 10%; animation-delay: 2s;"></div>
    <div class="decorative-blob" style="width: 100px; height: 100px; bottom: 20%; left: 20%; animation-delay: 4s;"></div>

    <!-- Hero Content -->
    <div class="hero-content">
        <div class="animate-fade-in-up">
            <!-- Status Badge -->
            <div class="d-inline-flex align-items-center gap-2 rounded-pill border border-primary bg-primary bg-opacity-10 px-4 py-2 mb-4 animate-scale-in" style="animation-delay: 0.2s;">
                <span class="rounded-circle bg-primary animate-pulse" style="width: 8px; height: 8px;"></span>
                <span class="text-primary fw-medium">Discover campus events</span>
            </div>
            
            <!-- Main Heading -->
            <h1 class="display-1 fw-bold mb-4 animate-fade-in-up" style="animation-delay: 0.3s;">
                <span class="gradient-text">Find.</span><br>
                <span class="gradient-text">Save.</span><br>
                <span class="gradient-text">Attend.</span>
            </h1>
            
            <!-- Subtitle -->
            <p class="lead text-muted mx-auto mb-5 animate-fade-in-up" style="max-width: 600px; animation-delay: 0.4s;">
                A modern way for students to explore events, claim tickets, and check in with QR codes. 
                Join thousands of students discovering amazing campus experiences.
            </p>
            
            <!-- Action Buttons -->
            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-5 animate-fade-in-up" style="animation-delay: 0.5s;">
                <a href="/Events" class="btn btn-primary btn-lg px-5 py-3 fs-5">
                    <i class="bi bi-calendar3 me-2"></i>Browse Events
                </a>
                <a href="#how-it-works" class="btn btn-outline-primary btn-lg px-5 py-3 fs-5">
                    <i class="bi bi-info-circle me-2"></i>Learn More
                </a>
            </div>

            <!-- Stats -->
            <div class="row g-4 pt-5 animate-fade-in-up" style="animation-delay: 0.6s;">
                <div class="col-6 col-md-3 text-center">
                    <div class="display-4 fw-bold text-primary">@ViewBag.TotalEvents</div>
                    <div class="text-muted">Events</div>
                </div>
                <div class="col-6 col-md-3 text-center">
                    <div class="display-4 fw-bold text-primary">@ViewBag.TotalUsers</div>
                    <div class="text-muted">Students</div>
                </div>
                <div class="col-6 col-md-3 text-center">
                    <div class="display-4 fw-bold text-primary">50+</div>
                    <div class="text-muted">Organizations</div>
                </div>
                <div class="col-6 col-md-3 text-center">
                    <div class="display-4 fw-bold text-primary">95%</div>
                    <div class="text-muted">Satisfaction</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="position-absolute bottom-0 start-50 translate-middle-x animate-fade-in-up" style="animation-delay: 1s; z-index: 10;">
        <div class="d-flex flex-column align-items-center gap-2 text-muted animate-bounce">
            <span class="small">Scroll to explore</span>
            <div class="border border-muted rounded-pill d-flex justify-content-center" style="width: 24px; height: 40px;">
                <div class="bg-muted rounded-pill mt-2 animate-bounce" style="width: 4px; height: 12px;"></div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="h2 fw-semibold mb-2">Featured Events</h2>
                <p class="text-muted">Handpicked events you don't want to miss</p>
            </div>
            <a href="/Events" class="btn btn-outline-primary">
                <i class="bi bi-arrow-right me-1"></i>View all
            </a>
        </div>
        <div class="row g-4">
            @if (ViewBag.FeaturedEvents != null)
            {
                var events = (List<Event>)ViewBag.FeaturedEvents;
                var count = 0;
                @foreach (var eventItem in events)
                {
                    @if (count < 3)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="card card-glass h-100">
                                @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                                {
                                    <div class="position-relative" style="height: 200px;">
                                        <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 100%; object-fit: cover;">
                                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-to-t from-black bg-opacity-60"></div>
                                    </div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@eventItem.Title</h5>
                                    <p class="card-text text-muted flex-grow-1">@(eventItem.Description.Length > 100 ? eventItem.Description.Substring(0, 100) + "..." : eventItem.Description)</p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <small class="text-muted">@eventItem.Date.ToString("MMM dd, yyyy")</small>
                                            <span class="badge bg-primary">@eventItem.Category</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">@eventItem.Location</small>
                                            <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    count++;
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="bi bi-calendar-event display-1 text-muted"></i>
                    <h3 class="mt-3">No featured events available</h3>
                    <p class="text-muted">Check back soon for exciting events!</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Upcoming Highlights Section -->
<section class="py-5">
    <div class="container">
        <div class="mb-5">
            <h2 class="h2 fw-semibold mb-2">Upcoming Highlights</h2>
            <p class="text-muted">Don't miss these exciting events</p>
        </div>
        <div class="d-flex gap-4 overflow-auto pb-4" style="scrollbar-width: none; -ms-overflow-style: none;">
            @if (ViewBag.FeaturedEvents != null)
            {
                var events = (List<Event>)ViewBag.FeaturedEvents;
                var count = 0;
                @foreach (var eventItem in events)
                {
                    @if (count < 5)
                    {
                        <div class="flex-shrink-0" style="width: 320px;">
                            <div class="card card-glass overflow-hidden">
                                <div class="position-relative" style="height: 128px;">
                                    @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                                    {
                                        <img src="@eventItem.ImageUrl" alt="@eventItem.Title" class="w-100 h-100" style="object-fit: cover;">
                                    }
                                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient-to-t from-black bg-opacity-60"></div>
                                    <div class="position-absolute bottom-0 start-0 text-white p-3">
                                        <div class="fw-medium">@eventItem.Title</div>
                                        <div class="small opacity-90">@eventItem.Date.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                                <div class="p-3">
                                    <div class="small text-muted">@eventItem.Location</div>
                                    <div class="small text-muted">@eventItem.Organization</div>
                                </div>
                            </div>
                        </div>
                    }
                    count++;
                }
            }
        </div>
    </div>
</section>

