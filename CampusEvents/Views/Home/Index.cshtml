@{
    ViewData["Title"] = "Campus Events";
}

<!-- Hero Section - Clean and Minimal -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="mb-4">Discover Amazing Campus Events</h1>
                <p class="lead mb-5">Find, attend, and create memorable experiences with your campus community.</p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a href="/Events" class="btn btn-primary btn-lg">Browse Events</a>
                    <a href="/Account/Register" class="btn btn-outline-primary btn-lg">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-4">
                <div class="h2 fw-bold text-primary">@ViewBag.TotalEvents+</div>
                <div class="text-muted">Events</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="h2 fw-bold text-primary">@ViewBag.TotalUsers+</div>
                <div class="text-muted">Students</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="h2 fw-bold text-primary">50+</div>
                <div class="text-muted">Organizations</div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="h2 fw-bold text-primary">95%</div>
                <div class="text-muted">Satisfaction</div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
<section class="py-5 bg-secondary">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="mb-0">Featured Events</h2>
            <a href="/Events" class="btn btn-outline-primary">View All</a>
        </div>
        
        <div class="row g-4">
            @if (ViewBag.FeaturedEvents != null)
            {
                var events = (List<Event>)ViewBag.FeaturedEvents;
                for (int i = 0; i < Math.Min(3, events.Count); i++)
                {
                    var eventItem = events[i];
                    <div class="col-lg-4 col-md-6">
                        <div class="card hover-scale-105">
                            @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                            {
                                <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.Title">
                            }
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title">@eventItem.Title</h5>
                                    <span class="badge bg-primary">@eventItem.Category</span>
                                </div>
                                <p class="card-text">@eventItem.Description.Substring(0, Math.Min(100, eventItem.Description.Length))...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@eventItem.Date.ToString("MMM dd, yyyy")</small>
                                    <a href="/Events/Details/@eventItem.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="bi bi-calendar-event display-1 text-muted"></i>
                    <h3 class="mt-3">No featured events available</h3>
                    <p class="text-muted">Check back soon for exciting new events!</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>How It Works</h2>
            <p class="text-muted">Simple steps to discover and attend campus events</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-search fs-4"></i>
                    </div>
                </div>
                <h4>Discover Events</h4>
                <p class="text-muted">Browse a wide range of campus events tailored to your interests.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-ticket-perforated fs-4"></i>
                    </div>
                </div>
                <h4>Claim Tickets</h4>
                <p class="text-muted">Secure your spot with easy ticket claiming and QR code generation.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle" style="width: 60px; height: 60px;">
                        <i class="bi bi-check-circle fs-4"></i>
                    </div>
                </div>
                <h4>Attend & Enjoy</h4>
                <p class="text-muted">Seamless check-in with your unique QR code and enjoy the event.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-3">Ready to explore?</h2>
        <p class="lead mb-4">Join Campus Events today and unlock a world of experiences.</p>
        <a href="/Account/Register" class="btn btn-light btn-lg">Get Started Now</a>
    </div>
</section>